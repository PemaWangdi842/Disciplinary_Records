<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>View Student Disciplinary Records</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    html, body {
      height: 100%;
      overflow: hidden;
    }

    body {
      background-image: url('https://images.unsplash.com/photo-1524995997946-a1c2e315a42f');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      background-attachment: fixed;
      color: white;
    }

    /* Header/Nav */
    header {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      background-color: rgba(0, 0, 0, 0.7);
      padding: 15px 30px;
      z-index: 1000;
    }

    nav ul {
      list-style: none;
      display: flex;
      justify-content: flex-end;
      align-items: center;
    }

    nav ul li:first-child {
      margin-right: auto;
      font-size: 1.8rem;
      font-weight: bold;
      color: white;
    }

    nav ul li {
      margin-left: 20px;
    }

    nav ul li a {
      color: white;
      text-decoration: none;
      font-weight: 500;
    }

    nav ul li a:hover {
      text-decoration: underline;
    }

    /* Main content area */
    main {
      position: absolute;
      top: 70px; /* height of header */
      bottom: 60px; /* height of footer */
      left: 0;
      right: 0;
      overflow-y: auto;
      padding: 2rem;
      background-color: rgba(0, 0, 0, 0.5);
    }

    .container {
      background-color: rgba(0, 0, 0, 0.6);
      padding: 2rem;
      border-radius: 12px;
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.5);
      max-width: 1100px;
      width: 100%;
      margin: 0 auto;
      overflow-x: auto;
    }

    h2 {
      text-align: center;
      font-size: 2rem;
      color: #ff9800;
      margin-bottom: 1.2rem;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background-color: rgba(255, 255, 255, 0.1);
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
      color: #fff;
    }

    th, td {
      padding: 12px 15px;
      text-align: left;
      border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }

    th {
      background-color: rgba(0, 0, 0, 0.7);
      font-size: 1rem;
      color: #fff;
    }

    tr:nth-child(even) {
      background-color: rgba(255, 255, 255, 0.05);
    }

    td {
      font-size: 0.95rem;
    }

    .btn {
      background-color: #ff9800;
      color: white;
      font-size: 0.9rem;
      padding: 3px 6px;
      border-radius: 10px;
      text-decoration: none;
      transition: background-color 0.3s ease;
    }

    .btn:hover {
      background-color:  #e68900;
    }

    /* Footer */
    footer {
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      background-color: rgba(0, 0, 0, 0.7);
      color: white;
      text-align: center;
      padding: 15px 10px;
      font-size: 0.9rem;
      z-index: 1000;
    }

    @media (max-width: 768px) {
      main {
        padding: 1rem;
      }

      .container {
        padding: 1rem;
      }

      th, td {
        padding: 10px 8px;
      }
    }
  </style>
</head>
<body>

  <header>
    <nav>
      <ul>
        <li>Disciplinary System</li>
        <li><a href="/lecturer-dashboard">Home</a></li>
        <li><a href="/">Log Out</a></li>
      </ul>
    </nav>
  </header>

  <main>
    <div class="container">
      <h2>Record List</h2>
      <table>
        <thead>
          <tr>
            <th>Student Name</th>
            <th>Student ID</th>
            <th>Description</th>
            <th>Offense</th>
            <th>Date</th>
            <th>Details</th>
          </tr>
        </thead>
        <tbody id="records-table-body">
          <% records.forEach(record => { %>
            <tr>
              <td><%= record.studentName %></td>
              <td><%= record.studentId %></td>
              <td><%= record.description %></td>
              <td><%= record.offense %></td>
              <td><%= record.date %></td>
              <td>
                <a href="/record-details/<%= record.id %>" class="btn">Record Details</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </main>

  <footer>
    <p>&copy; 2025 Student Disciplinary Record Management System. All rights reserved.</p>
  </footer>

</body>
</html>
